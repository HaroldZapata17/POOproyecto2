void tablero2(){
  int sudoku[9][9] = {};
  for(int i=0; i < 9; i++){
        cout <<endl;
        cout << "--+---+---|---+---+---|---+---+---| "<< endl;
        for(int j = 0; j < 9; j++){
            sudoku [0][2] = 9;
            sudoku [0][4] = 7;
            sudoku [0][6] = 4;
            sudoku [0][7] = 3;
            sudoku [0][8] = 6;
            sudoku [1][3] = 3;
            sudoku [1][4] = 8;
            sudoku [1][6] = 9;
            sudoku [2][0] = 6;
            sudoku [2][1] = 3;
            sudoku [2][2] = 2;
            sudoku [2][3] = 5;
            sudoku [3][0] = 7;
            sudoku [3][1] = 6;
            sudoku [3][2] = 3;
            sudoku [3][3] = 8;
            sudoku [3][7] = 4;
            sudoku [4][0] = 4;
            sudoku [4][3] = 1;
            sudoku [4][5] = 7;
            sudoku [4][8] = 8;
            sudoku [5][1] = 2;
            sudoku [5][5] = 3;
            sudoku [5][6] = 5;
            sudoku [5][7] = 6;
            sudoku [5][8] = 7;
            sudoku [6][5] = 8;
            sudoku [6][6] = 2;
            sudoku [6][7] = 7;
            sudoku [6][8] = 3;
            sudoku [7][2] = 6;
            sudoku [7][4] = 3;
            sudoku [7][5] = 9;
            sudoku [8][0] = 3;
            sudoku [8][1] = 5;
            sudoku [8][2] = 8;
            sudoku [8][4] = 1;
            sudoku [8][6] = 6;
            cout << sudoku[i][j] << " | ";
            
        }
    }
    cout << endl;
    cout << "--+---+---|---+---+---|---+---+---| ";
    cout << endl;  
}
